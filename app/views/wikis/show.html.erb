<div class="row">
  <div class="col-md-8">
    <h1><%= @wiki.title %></h1>
    <p><%= @wiki.body %></p>
  </div>

  <div class="col-md-4">
    <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
          Action <span class="caret"></span>
        </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Edit Wiki", edit_wiki_path(@wiki) %></li>
            <li><%= link_to "Delete Wiki", wiki_path, method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
            <li class="divider"></li>
            
          </ul>
        </div>
      </div>
